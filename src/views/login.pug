extends base

block content
    .page-container
        .form-box
            h2.form-title Welcome back
            if errorMessage 
                span.error= errorMessage
            form.form-join(method='POST')
                input.input-field(type="text", name="username", placeholder="Username", required)
                input.input-field(type="password", name="password", placeholder="Password", required)
                input.submit-btn(type="submit", value="Log In")
                include partials/social-login
            .auth-switch
                span Don't have an account?
                br
