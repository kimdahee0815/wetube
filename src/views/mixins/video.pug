mixin video(video)
    div         
        h4 
            a(href=`/videos/${video.id}`)=video.title
            div 
                video(src="/"+video.fileUrl, controls, width=500, height=300)
            p=video.description
            ul
                each hashtag in video.hashtags
                    li=hashtag
            small=video.createdAt
            hr
