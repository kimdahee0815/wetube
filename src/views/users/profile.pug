extends ../base
include ../mixins/video

block content 
    div.profile__data
        if !user.avatarUrl
            img.avatar(src='/uploads/avatars/135a6adc33a519d6c6dace112ed52f3a')
        else if user.avatarUrl.startsWith('uploads')   
            img.avatar(src=`/${user.avatarUrl}`)
        else 
            img.avatar(src=`${loggedInUser.avatarUrl}`)
        h3=user.name
    div.video__grid
        each video in user.videos 
            +video(video)
        else 
            span.empty__message No Videos Found