extends ../base

block content 
    div     
        video#preview
        button#actionBtn Start Recording
    if errorMessage 
        span=errorMessage 

    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File  
        input(type="file", accept="video/*",name="video", id="video", required)
        input(placeholder="Title", name="title", type="text", required, maxlength=80)
        input(placeholder="Description", name="description", type="text", required, minlength=20)
        input(placeholder="Hashtags, separated by comma.", name="hashtags", type="text", required)
        input(type="submit", value="Upload Video")

block scripts 
    script(src="/assets/js/recorder.js")